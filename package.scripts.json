{
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "NODE_ENV=development tsx watch server/index.ts",
    "dev:client": "vite",
    "dev:db": "drizzle-kit studio",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "build:production": "node build-production.js",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "setup": "npm install && node setup-local-db.js && npm run db:push",
    "reset": "rm -rf node_modules package-lock.json && npm install",
    "clean": "rm -rf dist client/dist .vite",
    "preview": "vite preview"
  }
}
